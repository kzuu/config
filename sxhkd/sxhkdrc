#
# wm independent hotkeys
#

# app shortcuts
super + {Return,b,n,u,z,p}
	{st,bspc desktop --focus ^2 && firefox,qutebrowser,urxvt,pcmanfm,/home/tpakkila/Downloads/spotify_libraries-master/spotify-wrapper}

super + {F1,F2}
	{vncviewer debian:5901 &,vncviewer i5:5901 &}

# program launcher
super + d
	/home/tpakkila/.config/rofi/rofiscript.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + e
	bspc quit

# close and kill
super + ctrl + c
	bspc node -c

super + shift + q
	bspc node -c

ctrl + q
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
#super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,space,l}
	bspc node -t {tiled,floating,pseudo_tiled}

# set the node flags
super + ctrl + {l,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,y,u}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
#super + bracket{left,right}
super + {comma,period}
	bspc desktop -f {prev,next}

# focus other monitor
super + shift + {comma,period}
	bspc monitor -f {prev,next}



# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# send window to preselection
super + w
	bspc node -n 'last.!automatic.local'

# swap split
super + v
	bspc node @/ -R 90




#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# mouse settings
#

super + button {1,3}
	bspc pointer -g {move,resize_corner}


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {j,k,i,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# control cmus
super + {F11,F12,F10}
	cmus-remote {-u,-n,-r}

super + {XF86AudioLowerVolume,XF86AudioRaiseVolume}
	cmus-remote {-v -10%,-v +10%}

# control spotify
super + ctrl {F10,F11,F12}
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.{Previous,PlayPause,Next}


#control volume systemwide
XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume 1 {-10%,+10%}
XF86AudioMute
	pactl set-sink-mute 1 toggle
super + ctrl + XF86AudioRaiseVolume
	pactl set-sink-volume 1 100%
